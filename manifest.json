{
  "manifest_version": 3,
  "name": "Tab Switcher",
  "short_name": "TabSwitch",
  "description": "Switch between Chrome tabs like macOS Cmd+Tab. Use Ctrl+Tab with visual preview to cycle through recently used tabs.",
  "version": "3.7.2",
  "permissions": [
    "tabs",
    "nativeMessaging",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "mainsw.js"
  },
  "commands": {
    "alt_switch_fast": {
      "suggested_key": {
        "default": "Alt+W",
        "mac": "Alt+W"
      },
      "description": "Quick switch between last 2 tabs"
    },
    "alt_switch_slow_backward": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Cycle backward through tabs"
    },
    "alt_switch_slow_forward": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Cycle forward through tabs"
    }
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png"
    },
    "default_popup": "popup.html"
  }
}